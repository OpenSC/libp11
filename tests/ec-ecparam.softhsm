outdir="output.$$"

# Load common test functions
. ${srcdir}/ec-no-pubkey.sh

sed -e "s|@MODULE_PATH@|${MODULE}|g" -e "s|@ENGINE_PATH@|../src/.libs/pkcs11.so|g" <"${srcdir}/engines.cnf.in" >"${outdir}/engines.cnf"

export OPENSSL_ENGINES="../src/.libs/"

openssl ecparam -engine pkcs11 -name brainpoolP256r1 -genkey -out "${outdir}/ec_key.pem"
if test $? != 0;then
	echo "Failed to run ecparam  -genkey"
	exit 1;
fi

openssl ecparam -in "${outdir}/ec_key.pem" -check
if test $? != 0;then
	echo "Failed to run ecparam -check"
	exit 1;
fi

rm -rf "$outdir"

exit 0
