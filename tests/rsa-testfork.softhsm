outdir="output.$$"

# Load common test functions
. ${srcdir}/common.sh

# Do the token initialization
init_token "rsa" "1" "libp11" ${ID} "server-key" "privkey" "pubkey" "cert"

# Load openssl settings
. ${srcdir}/openssl-settings.sh

# Restore openssl settings
trap cleanup EXIT

# Run the test
${WRAPPER} ./fork-test ${MODULE} ${PIN}
rc=$?
if [[ $rc -eq 77 ]]; then
	echo "Fork test skipped."
	rm -rf "$outdir"
	exit 77
elif [[ $rc -ne 0 ]]; then
	echo "Fork test failed."
	exit 1
fi

rm -rf "$outdir"

exit 0
